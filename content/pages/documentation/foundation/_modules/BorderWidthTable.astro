---
import { DBTag, DBIcon } from '@db-ux/react-core-components';
import './TokenTable.css';

const borderWidthTokens = [
	{ token: 'db-border-width-3xs', value: '0.0625rem (1px)' },
	{ token: 'db-border-width-2xs', value: '0.125rem (2px)' },
	{ token: 'db-border-width-xs', value: '0.25rem (4px)' },
	{ token: 'db-border-width-sm', value: '0.375rem (6px)' },
	{ token: 'db-border-width-md', value: '0.5rem (8px)' },
	{ token: 'db-border-width-lg', value: '0.625rem (10px)' },
	{ token: 'db-border-width-xl', value: '0.75rem (12px)' },
	{ token: 'db-border-width-2xl', value: '0.875rem (14px)' },
	{ token: 'db-border-width-3xl', value: '1rem (16px)' },
];
---

<div class="token-table">
	<table>
		<thead>
			<tr>
				<th>Token</th>
				<th>Value</th>
				<th>Preview</th>
			</tr>
		</thead>
		<tbody>
			{borderWidthTokens.map(({ token, value }) => (
				<tr
					onclick={`const span = this.querySelector('.copy-text'); span.textContent='Copied'; setTimeout(() => span.textContent='Copy Token', 2000); navigator.clipboard.writeText('var(--${token})')`}
				>
					<td>
						<div class="token-cell">
							<DBTag data-color="neutral">--{token}</DBTag>{' '}
							<span class="copy-text">Copy Token</span>
							<span data-icon-trailing="copy" data-icon-weight="16" />
						</div>
					</td>
					<td>{value}</td>
					<td>
						<div class="border-width-preview" data-border-width={token} />
					</td>
				</tr>
			))}
		</tbody>
	</table>
</div>
