---
import { DBAccordion, DBAccordionItem, DBTag, DBIcon } from '@db-ux/react-core-components';

const sizingTokens = [
	{
		token: 'db-sizing-3xs',
		functional: '0.375rem (6px)',
		regular: '0.5rem (8px)',
		expressive: '0.625rem (10px)',
	},
	{
		token: 'db-sizing-2xs',
		functional: '0.625rem (10px)',
		regular: '0.75rem (12px)',
		expressive: '0.875rem (14px)',
	},
	{
		token: 'db-sizing-xs',
		functional: '0.875rem (14px)',
		regular: '1rem (16px)',
		expressive: '1.25rem (20px)',
	},
	{
		token: 'db-sizing-sm',
		functional: '1.25rem (20px)',
		regular: '1.5rem (24px)',
		expressive: '1.75rem (28px)',
	},
	{
		token: 'db-sizing-md',
		functional: '2rem (32px)',
		regular: '2.5rem (40px)',
		expressive: '3rem (48px)',
	},
	{
		token: 'db-sizing-lg',
		functional: '3rem (48px)',
		regular: '4rem (64px)',
		expressive: '5rem (80px)',
	},
	{
		token: 'db-sizing-xl',
		functional: '5rem (80px)',
		regular: '6rem (96px)',
		expressive: '7.5rem (120px)',
	},
	{
		token: 'db-sizing-2xl',
		functional: '7.5rem (120px)',
		regular: '10rem (160px)',
		expressive: '15rem (240px)',
	},
	{
		token: 'db-sizing-3xl',
		functional: '10rem (160px)',
		regular: '15rem (240px)',
		expressive: '30rem (480px)',
	},
];

const containerTokens = [
	{ token: 'db-container-xs', value: '20rem (320px)' },
	{ token: 'db-container-sm', value: '40rem (640px)' },
	{ token: 'db-container-md', value: '48rem (768px)' },
	{ token: 'db-container-lg', value: '64rem (1024px)' },
	{ token: 'db-container-xl', value: '80rem (1280px)' },
	{ token: 'db-container-2xl', value: '96rem (1536px)' },
];

const categories = [
	{ key: 'sizing', label: 'Component', icon: 'list', tokens: sizingTokens, showDensity: true },
	{
		key: 'container',
		label: 'Container',
		icon: 'list',
		tokens: containerTokens,
		showDensity: false,
	},
];
---

<div class="token-table">
	<DBAccordion variant="card">
		{
			categories.map(({ key, label, icon, tokens, showDensity }) => (
				<DBAccordionItem headline={label}>
					<span slot="headline" class="accordion-headline">
						<DBIcon icon={icon} />
						{label}
					</span>
					<table>
						<thead>
							<tr>
								<th>Token</th>
								{showDensity ? (
									<>
										<th>Functional</th>
										<th>Regular</th>
										<th>Expressive</th>
									</>
								) : (
									<th>Value</th>
								)}
							</tr>
						</thead>
						<tbody>
							{tokens.map((item) => (
								<tr
									onclick={`const span = this.querySelector('.copy-text'); span.textContent='Copied'; setTimeout(() => span.textContent='Copy Token', 2000); navigator.clipboard.writeText('var(--${item.token})')`}
								>
									<td>
										<div class="token-cell">
											<DBTag data-color="neutral">--{item.token}</DBTag>{' '}
											<span class="copy-text">Copy Token</span>
											<span data-icon-trailing="copy" data-icon-weight="16" />
										</div>
									</td>
									{showDensity ? (
										<>
											<td>{item.functional}</td>
											<td>{item.regular}</td>
											<td>{item.expressive}</td>
										</>
									) : (
										<td>{item.value}</td>
									)}
								</tr>
							))}
						</tbody>
					</table>
				</DBAccordionItem>
			))
		}
	</DBAccordion>
</div>

<style is:global>
	@import './TokenTable.css';
</style>
