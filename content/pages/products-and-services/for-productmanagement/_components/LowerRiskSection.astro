---
import { appConfig } from '@config';
import { DBSection } from '@db-ux/react-core-components';
import { TextImage } from '@components';
---

<DBSection width="medium" spacing="medium" id="for-productmanagement--lower-risk-section">
  <TextImage
    title="Lower Risk"
    imageSrc={`${appConfig.basePath}assets/for-productmanagement/Lower-Risk--Lightmode--C.png`}
    imageSrcDark={`${appConfig.basePath}assets/for-productmanagement/Lower-Risk--Darkmode--C.png`}
    imageAlt="Shield and compliant UI elements symbolizing reduced product risk"
    imagePosition="left"
    mask="fade-bottom-right"
  >
    Rely on accessible, brand-aligned, and tested patterns to prevent avoidable rework.
  </TextImage>
</DBSection>
