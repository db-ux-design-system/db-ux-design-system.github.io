---
import { appConfig } from '@config';
import { DBSection } from '@db-ux/react-core-components';
import { TextImage } from '@components';
---

<DBSection
	width="medium"
	spacing="medium"
	aria-label="For Product Management section"
	id="for-productmanagement--efficient-delivery-section"
>
	<TextImage
		title="Efficient Delivery"
		imageSrc={`${appConfig.basePath}assets/for-productmanagement/Efficient-Delivery--Lightmode--C.png`}
		imageSrcDark={`${appConfig.basePath}assets/for-productmanagement/Efficient-Delivery--Darkmode--C.png`}
		imageAlt="Timeline compression illustrating faster delivery cycles"
		mask="fade-bottom-right"
	>
		Reduce time spent on repeated design and implementation decisions.
	</TextImage>
</DBSection>
