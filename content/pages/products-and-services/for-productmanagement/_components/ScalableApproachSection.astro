---
import { appConfig } from '@config';
import { DBSection } from '@db-ux/react-core-components';
import { TextImage } from '@components';
---

<DBSection width="medium" spacing="medium" id="for-productmanagement--scalable-approach-section">
	<TextImage
		title="Scalable Approach"
		imageSrc={`${appConfig.basePath}assets/for-productmanagement/Scalable-Approach--Lightmode--C.png`}
		imageSrcDark={`${appConfig.basePath}assets/for-productmanagement/Scalable-Approach--Darkmode--C.png`}
		imageAlt="Expanding grid of product modules showing scalable standards"
		mask="fade-right"
	>
		Support multiple teams and products with standards that grow over time.
	</TextImage>
</DBSection>
