---
import { appConfig } from '@config';
import { DBSection } from '@db-ux/react-core-components';
import { TextImage } from '@components';
---

<DBSection width="medium" spacing="medium" id="components--shared-source-section">
  <TextImage
    title="Shared Source"
    imageSrc={`${appConfig.basePath}assets/components/Shared-Source--Lightmode--C.png`}
