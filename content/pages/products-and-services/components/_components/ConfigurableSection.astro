---
import { appConfig } from '@config';
import { DBSection } from '@db-ux/react-core-components';
import { TextImage } from '@components';
---

<DBSection width="medium" spacing="medium" id="components--configurable-section">
	<TextImage
		title="Configurable"
		imageSrc={`${appConfig.basePath}assets/components/Configurable--Lightmode--C.png`}
		imageSrcDark={`${appConfig.basePath}assets/components/Configurable--Darkmode--C.png`}
		imageAlt="Component panel showing adjustable variants and size options"
		imagePosition="left"
		mask="fade-bottom-right"
	>
		Variants, sizes, and content adapt to product needs without altering structure.
	</TextImage>
</DBSection>
