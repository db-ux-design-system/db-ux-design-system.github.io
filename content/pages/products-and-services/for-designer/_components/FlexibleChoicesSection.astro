---
import { appConfig } from '@config';
import { DBSection } from '@db-ux/react-core-components';
import { TextImage } from '@components';
---

<DBSection width="medium" spacing="medium" id="components--flexible-choices-section">
  <TextImage
    title="Flexible Choices"
    imageSrc={`${appConfig.basePath}assets/for-designer/Flexible-Choices--Lightmode--C.png`}
    imageSrcDark={`${appConfig.basePath}assets/for-designer/Flexible-Choices--Darkmode--C.png`}
    imageAlt="Component variants demonstrating adaptable design options"
    imagePosition="left"
    mask="fade-bottom-right"
  >
    Adapt components and tokens to fit context without losing alignment.
  </TextImage>
</DBSection>
