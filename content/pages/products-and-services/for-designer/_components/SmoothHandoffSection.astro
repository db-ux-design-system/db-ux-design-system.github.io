---
import { appConfig } from '@config';
import { DBSection } from '@db-ux/react-core-components';
import { TextImage } from '@components';
---

<DBSection width="medium" spacing="medium" id="for-designer--smooth-handoff-section">
	<TextImage
		title="Smooth Handoff"
		imageSrc={`${appConfig.basePath}assets/for-designer/Smooth-Handoff--Lightmode--C.png`}
		imageSrcDark={`${appConfig.basePath}assets/for-designer/Smooth-Handoff--Darkmode--C.png`}
		imageAlt="Design-to-code handoff illustration with specs and components"
		imagePosition="left"
		mask="fade-bottom-right"
	>
		Rely on clear specs and shared foundations for efficient collaboration with developers.
	</TextImage>
</DBSection>
