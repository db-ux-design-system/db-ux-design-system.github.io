---
import { appConfig } from '@config';
import { DBSection } from '@db-ux/react-core-components';
import { TextImage } from '@components';
---

<DBSection
  width="medium"
  spacing="medium"
  aria-label="For Designer section"
  id="for-designer--consistent-results-section"
>
  <TextImage
    title="Consistent Results"
    imageSrc={`${appConfig.basePath}assets/for-designer/Consistent-Results--Lightmode--C.png`}
    imageSrcDark={`${appConfig.basePath}assets/for-designer/Consistent-Results--Darkmode--C.png`}
    imageAlt="Screens showing unified interface layouts across devices"
    mask="fade-bottom-right"
  >
    Ensure a shared visual language and predictable outcomes across products and devices.
  </TextImage>
</DBSection>
