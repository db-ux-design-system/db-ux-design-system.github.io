---
import { appConfig } from '@config';
import { DBSection } from '@db-ux/react-core-components';
import { TextImage } from '@components';
---

<DBSection width="medium" spacing="medium" id="foundations--adaptive-colors-section">
	<TextImage
		title="Adaptive Colors"
		imageSrc={`${appConfig.basePath}assets/foundations/Adaptive-Colors--Lightmode--C.png`}
		imageSrcDark={`${appConfig.basePath}assets/foundations/Adaptive-Colors--Darkmode--C.png`}
		imageAlt="Palette illustrating adaptive color shifts between light and dark mode"
		imagePosition="left"
		mask="fade-bottom-right"
	>
		Maintain consistent contrast and tone across different color modes and contexts.
	</TextImage>
</DBSection>
