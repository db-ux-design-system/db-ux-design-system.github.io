---
import { appConfig } from '@config';
import { DBSection } from '@db-ux/react-core-components';
import { TextImage } from '@components';
---

<DBSection width="medium" spacing="medium" id="foundations--materials-section">
	<TextImage
		title="Materials"
		imageSrc={`${appConfig.basePath}assets/foundations/Materials--Lightmode--C.png`}
		imageSrcDark={`${appConfig.basePath}assets/foundations/Materials--Darkmode--C.png`}
		imageAlt="Layered panels showing elevation, border and opacity material styles"
		mask="fade-bottom-right"
	>
		Create visual hierarchy through variations in borders, opacity, and fill.
	</TextImage>
</DBSection>
