---
import { appConfig } from '@config';
import { DBSection } from '@db-ux/react-core-components';
import { TextImage } from '@components';
---

<DBSection width="medium" spacing="medium" id="foundations--darkmode-section">
	<TextImage
		title="Darkmode"
		imageSrc={`${appConfig.basePath}assets/foundations/Darkmode--Lightmode--C.png`}
		imageSrcDark={`${appConfig.basePath}assets/foundations/Darkmode--Darkmode--C.png`}
		imageAlt="Comparison of interface elements in light versus dark mode"
		imagePosition="left"
		mask="fade-bottom-right"
	>
		Support comfortable and readable interfaces across different luminance environments.
	</TextImage>
</DBSection>
