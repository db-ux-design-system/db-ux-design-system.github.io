---
import './ComponentPlayground.css';
import ShellExample from '@template/components/ShellExample/ShellExample.tsx';
import DrawerExample from '@template/components/DrawerExample/DrawerExample.tsx';
import {
	DBShell,
	DBControlPanelDesktop,
	DBControlPanelBrand,
	DBNavigation,
	DBNavigationItem,
	DBControlPanelPrimaryActions,
} from '@db-ux/react-core-components';
interface Props {
	config: any;
	component: any;
}

const { config, component: Component } = Astro.props;

// Native HTML attributes that should not use data- prefix
const nativeAttributes = [
	'label',
	'placeholder',
	'type',
	'disabled',
	'required',
	'readonly',
	'value',
	'name',
	'id',
];
// Properties that support both kebab-case and camelCase
const dualCaseProps = {
	invalidMessage: 'invalid-message',
	validMessage: 'valid-message',
	dataListId: 'data-list-id',
	showMessage: 'show-message',
	minLength: 'min-length',
	maxLength: 'max-length',
	showLabel: 'show-label',
	showIconLeading: 'show-icon-leading',
	showIcon: 'show-icon',
	iconLeading: 'icon-leading',
	iconTrailing: 'icon-trailing',
	showRequiredAsterisk: 'show-required-asterisk',
	showIconTrailing: 'show-icon-trailing',
	fieldSizing: 'field-sizing',
	readOnly: 'read-only',
	ariaDescribedBy: 'aria-described-by',
	messageSize: 'message-size',
	messageIcon: 'message-icon',
	validMessageSize: 'valid-message-size',
	invalidMessageSize: 'invalid-message-size',
};
---

<div class="component-playground">
	<div class="preview-area">
		{
			config.elementId === 'playground-badge' ? (
				<div class="badge-container">
					<span>List Item</span>
					<Component {...config.defaultProps} id={config.elementId}>
						{config.textElementId && <span id={config.textElementId}>{config.defaultText}</span>}
						{!config.textElementId && config.defaultText}
					</Component>
				</div>
			) : config.elementId === 'playground-input' ? (
				<div class="db-input" id={config.elementId}>
					<label id="playground-input-label">{config.defaultProps.label || 'Label'}</label>
					<input
						id="playground-input-field"
						aria-invalid="false"
						type={config.defaultProps.type || 'text'}
						placeholder={config.defaultProps.placeholder || ''}
						disabled={config.defaultProps.disabled}
					/>
					<span
						id="playground-input-infotext-valid"
						class="db-infotext"
						data-semantic="successful"
						data-size="small"
						data-show-icon-leading="true"
						style="display: none;"
					/>
					<span
						id="playground-input-infotext"
						class="db-infotext"
						data-semantic="critical"
						data-size="small"
						data-show-icon-leading="true"
					/>
					<span data-visually-hidden="true" role="status" />
				</div>
			) : config.elementId === 'playground-switch' ? (
				<label class="db-switch" id={config.elementId}>
					<input
						id="playground-switch-input"
						type="checkbox"
						role="switch"
						checked={config.defaultProps.checked}
						disabled={config.defaultProps.disabled}
						onchange="const controls = document.querySelectorAll('.controls-area input[type=checkbox]'); controls.forEach(c => { if(c.onchange && c.onchange.toString().includes('target.checked')) c.checked = this.checked; });"
					/>
					<span id="playground-switch-label">Enable notifications</span>
				</label>
			) : config.elementId === 'playground-radio' ? (
				<label class="db-radio" id={config.elementId}>
					<input
						id="playground-radio-input"
						type="radio"
						checked={config.defaultProps.checked}
						disabled={config.defaultProps.disabled}
						onchange="const controls = document.querySelectorAll('.controls-area input[type=checkbox]'); controls.forEach(c => { if(c.onchange && c.onchange.toString().includes('target.checked')) c.checked = this.checked; });"
					/>
					<span id="playground-radio-label">Option 1</span>
				</label>
			) : config.elementId === 'playground-checkbox' ? (
				<label class="db-checkbox" id={config.elementId}>
					<input
						id="playground-checkbox-input"
						type="checkbox"
						checked={config.defaultProps.checked}
						disabled={config.defaultProps.disabled}
						onchange="const controls = document.querySelectorAll('.controls-area input[type=checkbox]'); controls.forEach(c => { if(c.onchange && c.onchange.toString().includes('target.checked')) c.checked = this.checked; });"
					/>
					<span id="playground-checkbox-label">Accept terms</span>
				</label>
			) : config.elementId === 'demo-navigation' ? (
				<nav class="db-navigation">
					<menu>
						<li class="db-navigation-item">
							<a href="#" aria-current="page">
								Navigation Item 1
							</a>
						</li>
						<li class="db-navigation-item">
							<a href="#">Navigation Item 2</a>
						</li>
						<li class="db-navigation-item">
							<a href="#">Navigation Item 3</a>
						</li>
					</menu>
				</nav>
			) : config.elementId === 'demo-navigation-item' ? (
				<nav class="db-navigation">
					<menu>
						<li class="db-navigation-item" id={config.elementId} data-width="auto">
							<a id="navigation-item-link" href="#">
								Navigation Item
							</a>
						</li>
					</menu>
				</nav>
			) : config.elementId === 'demo-notification' ? (
				<article
					class="db-notification"
					id={config.elementId}
					data-semantic={config.defaultProps.semantic}
					data-variant={config.defaultProps.variant}
					data-headline={config.defaultProps.headline}
					data-link-variant="block"
				>
					{config.properties.find((p) => p.name === 'show-headline')?.defaultValue !== false && (
						<header id="notification-headline">{config.defaultProps.headline || ''}</header>
					)}
					<p />
					<p id="notification-text">{config.defaultText}</p>
					<p />
					<a
						id="notification-link"
						class="db-link"
						href="#"
						data-variant="inline"
						data-size="medium"
					>
						View details
					</a>
					<button
						id="notification-close"
						class="db-button"
						type="button"
						data-icon="cross"
						data-size="small"
						data-variant="ghost"
						data-no-text="true"
						style={
							config.properties.find((p) => p.name === 'closeable')?.defaultValue === false
								? 'display: none;'
								: ''
						}
					>
						Close
					</button>
				</article>
			) : config.elementId === 'playground-select' ? (
				<div class="db-select" id={config.elementId} data-hide-label="false" data-variant="above">
					<label id="playground-select-label">{config.defaultProps.label || 'Country'}</label>
					<select
						id="playground-select-field"
						aria-invalid="false"
						onchange="const wrapper = document.getElementById('playground-select'); if(wrapper.getAttribute('data-variant') === 'floating') { if(this.value) { wrapper.removeAttribute('data-label-hidden'); } else { wrapper.setAttribute('data-label-hidden', 'true'); } }"
					>
						<option id="playground-select-placeholder" value="" hidden="">
							{config.defaultProps.placeholder || 'Choose an option'}
						</option>
						<option value="de">Germany</option>
						<option value="fr">France</option>
						<option value="it">Italy</option>
						<option value="es">Spain</option>
					</select>
					<span
						id="playground-select-message"
						class="db-infotext"
						data-size="small"
						data-show-icon-leading="true"
						style="display: none;"
					>
						Please choose your country
					</span>
					<span
						id="playground-select-infotext-valid"
						class="db-infotext"
						data-semantic="successful"
						data-size="small"
						data-show-icon-leading="true"
						style="display: none;"
					>
						Valid selection
					</span>
					<span
						id="playground-select-infotext"
						class="db-infotext"
						data-semantic="critical"
						data-size="small"
						data-show-icon-leading="true"
						style="display: none;"
					>
						Please select a valid option
					</span>
					<span data-visually-hidden="true" role="status" />
				</div>
			) : config.elementId === 'playground-textarea' ? (
				<div class="db-textarea" id={config.elementId} data-variant={config.defaultProps.variant}>
					<label id="playground-textarea-label">{config.defaultProps.label || 'Message'}</label>
					<textarea
						id="playground-textarea-field"
						aria-invalid="false"
						placeholder={config.defaultProps.placeholder || ''}
						disabled={config.defaultProps.disabled}
						required={config.defaultProps.required}
						rows="4"
						data-resize="none"
					/>
					<span
						id="playground-textarea-message"
						class="db-infotext"
						data-size="small"
						data-show-icon-leading="true"
						style="display: none;"
					>
						Helper message
					</span>
					<span
						id="playground-textarea-infotext-valid"
						class="db-infotext"
						data-semantic="successful"
						data-size="small"
						data-show-icon-leading="true"
						style="display: none;"
					>
						{config.properties.find((p) => p.name === 'valid-message / validMessage')
							?.defaultValue || 'Valid input'}
					</span>
					<span
						id="playground-textarea-infotext"
						class="db-infotext"
						data-semantic="critical"
						data-size="small"
						data-show-icon-leading="true"
						style="display: none;"
					>
						{config.properties.find((p) => p.name === 'invalid-message / invalidMessage')
							?.defaultValue || 'Please enter a valid message'}
					</span>
					<span data-visually-hidden="true" role="status" />
				</div>
			) : config.elementId === 'playground-header' ? (
				<ShellExample />
			) : config.elementId === 'demo-drawer' ? (
				<>
					<button
						class="db-button"
						type="button"
						data-variant="primary"
						onclick="const drawer = document.getElementById('demo-drawer'); drawer.showModal(); const checkbox = document.querySelector('.controls-area input[type=checkbox][onchange*=showModal]'); if(checkbox) checkbox.checked = true;"
					>
						Open Drawer
					</button>
					<dialog
						class="db-drawer"
						id={config.elementId}
						data-backdrop={config.defaultProps.backdrop}
						data-direction={config.defaultProps.direction}
						onclick="if(event.target === this) { this.close(); const checkbox = document.querySelector('.controls-area input[type=checkbox][onchange*=showModal]'); if(checkbox) checkbox.checked = false; }"
					>
						<article class="db-drawer-container" data-direction={config.defaultProps.direction}>
							<header class="db-drawer-header">
								<div class="db-drawer-header-text">
									<header id="drawer-header-content">Drawer Title</header>
								</div>
								<button
									class="db-button button-close-drawer"
									type="button"
									data-icon="cross"
									data-variant="ghost"
									data-no-text="true"
									onclick="const drawer = document.getElementById('demo-drawer'); drawer.close(); const checkbox = document.querySelector('.controls-area input[type=checkbox][onchange*=showModal]'); if(checkbox) checkbox.checked = false;"
								>
									Close
								</button>
							</header>
							<div class="db-drawer-content" id="drawer-content">
								<p>This is the drawer content. You can add any content here.</p>
							</div>
						</article>
					</dialog>
				</>
			) : config.elementId === 'playground-tag' ? (
				<div
					class="db-tag"
					id={config.elementId}
					data-behavior={config.defaultProps.behavior}
					data-semantic={config.defaultProps.semantic}
					data-emphasis={config.defaultProps.emphasis}
				>
					<span id="playground-tag-text">{config.defaultText}</span>
					{config.defaultProps.behavior === 'removable' && (
						<button
							class="db-button db-tab-remove-button"
							data-icon="cross"
							data-size="small"
							data-no-text="true"
							data-variant="ghost"
							type="button"
						>
							<i
								role="tooltip"
								aria-hidden="true"
								data-gap="true"
								class="db-tooltip"
								id="playground-tag-tooltip"
								data-animation="true"
								data-show-arrow="true"
							>
								Remove
							</i>
						</button>
					)}
				</div>
			) : config.elementId === 'demo-infotext' ? (
				<span
					class="db-infotext"
					id={config.elementId}
					data-semantic={config.defaultProps.semantic}
					data-size={config.defaultProps.size}
					data-show-icon-leading={String(config.defaultProps.showIcon)}
				>
					<span id="demo-infotext-text">{config.defaultText}</span>
				</span>
			) : config.elementId === 'demo-custom-select' ? (
				<div
					class="db-custom-select"
					id={config.elementId}
					aria-invalid="false"
					data-custom-validity="no-validation"
					data-variant="above"
				>
					<label id="demo-custom-select-label">
						{config.defaultProps.label || 'Label'}
						<select
							id="demo-custom-select-field"
							multiple
							role="none"
							hidden
							tabindex="-1"
							disabled={config.defaultProps.disabled}
						>
							<option value="Option 1">Option 1</option>
							<option value="Option 2">Option 2</option>
							<option value="Option 3">Option 3</option>
							<option value="Option 4">Option 4</option>
							<option value="Option 5">Option 5</option>
						</select>
					</label>
					<details id="demo-custom-select-details">
						<summary
							class="db-custom-select-form-field"
							id="demo-custom-select-summary"
							aria-describedby="demo-custom-select-placeholder demo-custom-select-selected"
							aria-labelledby="demo-custom-select-label"
						/>
						<article data-spacing="none" class="db-custom-select-dropdown db-card">
							<div role="group" class="db-custom-select-list">
								<ul>
									<li class="db-custom-select-list-item db-checkbox" data-divider="false">
										<label>
											<input
												class="db-custom-select-list-item-checkbox"
												data-disable-focus="true"
												type="checkbox"
												name="demo-custom-select"
												value="Option 1"
												onchange="const s=Array.from(document.querySelectorAll('input[name=demo-custom-select]:checked')).map(i=>i.value);const sum=document.getElementById('demo-custom-select-summary');if(s.length){sum.innerHTML='<span data-visually-hidden=true>Selected</span>'+s.join(', ');document.getElementById('demo-custom-select-placeholder').style.display='none';}else{sum.innerHTML='';document.getElementById('demo-custom-select-placeholder').style.display='';}"
											/>
											Option 1
										</label>
									</li>
									<li class="db-custom-select-list-item db-checkbox" data-divider="false">
										<label>
											<input
												class="db-custom-select-list-item-checkbox"
												data-disable-focus="true"
												type="checkbox"
												name="demo-custom-select"
												value="Option 2"
												onchange="const s=Array.from(document.querySelectorAll('input[name=demo-custom-select]:checked')).map(i=>i.value);const sum=document.getElementById('demo-custom-select-summary');if(s.length){sum.innerHTML='<span data-visually-hidden=true>Selected</span>'+s.join(', ');document.getElementById('demo-custom-select-placeholder').style.display='none';}else{sum.innerHTML='';document.getElementById('demo-custom-select-placeholder').style.display='';}"
											/>
											Option 2
										</label>
									</li>
									<li class="db-custom-select-list-item db-checkbox" data-divider="false">
										<label>
											<input
												class="db-custom-select-list-item-checkbox"
												data-disable-focus="true"
												type="checkbox"
												name="demo-custom-select"
												value="Option 3"
												onchange="const s=Array.from(document.querySelectorAll('input[name=demo-custom-select]:checked')).map(i=>i.value);const sum=document.getElementById('demo-custom-select-summary');if(s.length){sum.innerHTML='<span data-visually-hidden=true>Selected</span>'+s.join(', ');document.getElementById('demo-custom-select-placeholder').style.display='none';}else{sum.innerHTML='';document.getElementById('demo-custom-select-placeholder').style.display='';}"
											/>
											Option 3
										</label>
									</li>
									<li class="db-custom-select-list-item db-checkbox" data-divider="false">
										<label>
											<input
												class="db-custom-select-list-item-checkbox"
												data-disable-focus="true"
												type="checkbox"
												name="demo-custom-select"
												value="Option 4"
												onchange="const s=Array.from(document.querySelectorAll('input[name=demo-custom-select]:checked')).map(i=>i.value);const sum=document.getElementById('demo-custom-select-summary');if(s.length){sum.innerHTML='<span data-visually-hidden=true>Selected</span>'+s.join(', ');document.getElementById('demo-custom-select-placeholder').style.display='none';}else{sum.innerHTML='';document.getElementById('demo-custom-select-placeholder').style.display='';}"
											/>
											Option 4
										</label>
									</li>
									<li class="db-custom-select-list-item db-checkbox" data-divider="false">
										<label>
											<input
												class="db-custom-select-list-item-checkbox"
												data-disable-focus="true"
												type="checkbox"
												name="demo-custom-select"
												value="Option 5"
												onchange="const s=Array.from(document.querySelectorAll('input[name=demo-custom-select]:checked')).map(i=>i.value);const sum=document.getElementById('demo-custom-select-summary');if(s.length){sum.innerHTML='<span data-visually-hidden=true>Selected</span>'+s.join(', ');document.getElementById('demo-custom-select-placeholder').style.display='none';}else{sum.innerHTML='';document.getElementById('demo-custom-select-placeholder').style.display='';}"
											/>
											Option 5
										</label>
									</li>
								</ul>
							</div>
							<div>
								<button
									class="db-button"
									type="button"
									data-icon="cross"
									data-size="small"
									data-width="full"
									data-variant="ghost"
									onclick="document.getElementById('demo-custom-select-details').removeAttribute('open');"
								>
									Close
								</button>
							</div>
						</article>
					</details>
					<button
						class="db-button"
						type="button"
						data-icon="cross"
						data-size="small"
						data-variant="ghost"
						data-no-text="true"
						onclick="document.querySelectorAll('input[name=demo-custom-select]:checked').forEach(i=>i.checked=false);document.getElementById('demo-custom-select-summary').innerHTML='';document.getElementById('demo-custom-select-placeholder').style.display='';"
					>
						Clear selection
					</button>
					<span
						class="db-custom-select-placeholder"
						aria-hidden="true"
						id="demo-custom-select-placeholder"
					>
						{config.defaultProps.placeholder || config.defaultText || 'Placeholder'}
					</span>
					<span
						id="demo-custom-select-infotext-valid"
						class="db-infotext"
						data-semantic="successful"
						data-size="small"
						data-show-icon-leading="true"
						style="display: none;"
					>
						Valid selection
					</span>
					<span
						id="demo-custom-select-infotext"
						class="db-infotext"
						data-semantic="critical"
						data-size="small"
						data-show-icon-leading="true"
						style="display: none;"
					>
						Please select a valid option
					</span>
					<span data-visually-hidden="true" role="status" />
				</div>
			) : config.elementId === 'demo-popover' ? (
				<div style="display: flex; align-items: center; justify-content: center; height: 100%;">
					<div class="db-popover" id={config.elementId}>
						<button aria-haspopup="true" class="db-button" type="button">
							Trigger
						</button>
						<article
							class="db-popover-content"
							data-spacing={config.defaultProps.spacing}
							data-placement={config.defaultProps.placement}
							data-width={config.defaultProps.width}
						>
							Popover Content
						</article>
					</div>
				</div>
			) : config.elementId === 'demo-section' ? (
				<div id="demo-section-wrapper" style="display: flex; flex-direction: column; justify-content: center; width: 100%; height: 100%;">
					<section
						class="db-section demo-section-item"
						id={config.elementId}
						data-spacing={config.defaultProps.spacing}
						data-width={config.defaultProps.width}
						style="width: 100%;"
					>
						<div style="background-color: var(--db-cyan-bg-basic-level-1-default); padding: var(--db-spacing-fixed-md);">
							Section 1
						</div>
					</section>
					<section
						class="db-section demo-section-item"
						data-spacing={config.defaultProps.spacing}
						data-width={config.defaultProps.width}
						style="width: 100%;"
					>
						<div style="background-color: var(--db-cyan-bg-basic-level-1-default); padding: var(--db-spacing-fixed-md);">
							Section 2
						</div>
					</section>
				</div>
			) : config.elementId === 'demo-stack' ? (
				<div
					class="db-stack"
					id={config.elementId}
					data-gap={config.defaultProps.gap}
					data-variant={config.defaultProps.variant}
					data-direction={config.defaultProps.direction}
					data-alignment={config.defaultProps.alignment}
				>
					<div style="background-color: var(--db-cyan-bg-basic-level-1-default); padding: var(--db-spacing-fixed-md);">
						Item 1
					</div>
					{config.defaultProps.variant === 'divider' && <div class="db-divider" />}
					<div style="background-color: var(--db-cyan-bg-basic-level-1-default); padding: var(--db-spacing-fixed-md);">
						Item 2
					</div>
					{config.defaultProps.variant === 'divider' && <div class="db-divider" />}
					<div style="background-color: var(--db-cyan-bg-basic-level-1-default); padding: var(--db-spacing-fixed-md);">
						Item 3
					</div>
				</div>
			) : config.elementId === 'demo-accordion' ? (
				<ul class="db-accordion" id={config.elementId} data-variant={config.defaultProps.variant}>
					<li class="db-accordion-item">
						<details>
							<summary>Title</summary>
							<div>Content</div>
						</details>
					</li>
					<li class="db-accordion-item">
						<details>
							<summary>Title</summary>
							<div>Content</div>
						</details>
					</li>
					<li class="db-accordion-item">
						<details>
							<summary>Title</summary>
							<div>Content</div>
						</details>
					</li>
				</ul>
			) : config.elementId === 'demo-backdrop' ? (
				<>
					<button
						class="db-button"
						type="button"
						data-variant="primary"
						onclick="const backdrop = document.getElementById('demo-backdrop'); backdrop.style.display = 'block'; const checkbox = document.querySelector('.controls-area input[type=checkbox][onchange*=demo-backdrop]'); if(checkbox) checkbox.checked = true;"
					>
						Show Backdrop
					</button>
					<div
