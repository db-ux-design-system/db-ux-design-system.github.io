---
interface Props {
	config: any;
}

const { config } = Astro.props;
const slots = config.slots || [];
---

{slots.length > 0 && (
	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Description</th>
			</tr>
		</thead>
		<tbody>
			{slots.map((slot) => (
				<tr>
					<td><code>{slot.name}</code></td>
					<td>{slot.description}</td>
				</tr>
			))}
		</tbody>
	</table>
)}
