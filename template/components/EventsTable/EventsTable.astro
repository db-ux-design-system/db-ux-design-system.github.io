---
interface Props {
	config: any;
}

const { config } = Astro.props;
const events = config.events || [];
---

{events.length > 0 && (
	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Type</th>
				<th>Description</th>
			</tr>
		</thead>
		<tbody>
			{events.map((event) => (
				<tr>
					<td><code>{event.name}</code></td>
					<td>{event.type}</td>
					<td>{event.description}</td>
				</tr>
			))}
		</tbody>
	</table>
)}
