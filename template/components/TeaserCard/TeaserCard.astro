---
import { DBCard, DBLink } from '@db-ux/react-core-components';
import './TeaserCard.css';

interface Props {
	teasers: {
		title: string;
		description: string;
		url: string;
	}[];
}

const { teasers } = Astro.props;
---

<div class="teaser-cards">
	{
		teasers.map((teaser) => (
			<DBCard behavior="interactive" spacing="none">
				<DBLink href={teaser.url} variant="inline">
					<div class="teaser-content">
						<h6>{teaser.title}</h6>
						<p>{teaser.description}</p>
					</div>
				</DBLink>
			</DBCard>
		))
	}
</div>
