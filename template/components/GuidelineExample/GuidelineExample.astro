---
import { DBBadge } from '@db-ux/react-core-components';
import './GuidelineExample.css';

interface Props {
	variant: 'do' | 'dont';
	figmaUrl: string;
	description: string;
}

const { variant, figmaUrl, description } = Astro.props;
const semantic = variant === 'do' ? 'successful' : 'critical';
const label = variant === 'do' ? 'Do' : "Don't";
const fullUrl = `${figmaUrl}&embed-host=share&footer=false&viewport-controls=false&page-selector=false&scaling=scale-down-width`;
---

<div class="guideline-example-container">
	<DBBadge semantic={semantic} size="medium" class="guideline-example-badge">
		<span>{label}</span>
	</DBBadge>
	<iframe
		class="guideline-example-iframe"
		src={fullUrl}
		loading="eager"
		allowfullscreen></iframe>
	<p>{description}</p>
</div>
